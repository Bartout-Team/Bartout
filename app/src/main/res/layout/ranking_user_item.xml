<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="#. User #"
        />

    <TextView
        android:id="@+id/user_alcohol_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.7â€°"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:paddingTop="8dp"
        android:paddingRight="10dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_alcohol_level_progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_alcohol_level"
        android:layout_alignRight="@+id/user_alcohol_level"
        android:layout_alignEnd="@+id/user_alcohol_level" />
</RelativeLayout>