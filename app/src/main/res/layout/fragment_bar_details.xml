<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.zhaw.bartout.gui.BarDetailsFragment"
    android:background="@android:color/transparent">

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/locateMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_action_directions"
        fab:fab_colorNormal="#4CAF50"
        fab:fab_colorPressed="#2E7D32"
        fab:fab_colorRipple="#43A047"
        android:onClick="testOnClick" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_blue_bright">
    </LinearLayout>

</FrameLayout>
