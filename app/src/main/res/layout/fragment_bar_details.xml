<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.zhaw.bartout.gui.BarDetailsFragment"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_blue_bright">

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/checkInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015"
            fab:fab_colorNormal="#4CAF50"
            fab:fab_colorPressed="#2E7D32"
            fab:fab_colorRipple="#43A047"
            android:onClick="testOnClick"
            android:layout_marginTop="36dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/checkinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_action_accept"
        fab:fab_colorNormal="@android:color/holo_green_dark"/>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/navigateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="70dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_action_directions"
        fab:fab_colorNormal="@android:color/holo_orange_light" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_blue_bright">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBarName"
            android:text="Kennedy's"
            android:textSize="24dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/textViewType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant"
            android:textSize="16dp"
            android:layout_margin="5dp"/>
    </LinearLayout>

</FrameLayout>
